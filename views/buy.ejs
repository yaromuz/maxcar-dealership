<!-- Interactive Test Area -->
<section class="interactive-test py-5 bg-darker">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="test-console">
                    <div class="console-header">
                        <div class="console-buttons">
                            <span class="console-btn red"></span>
                            <span class="console-btn yellow"></span>
                            <span class="console-btn green"></span>
                        </div>
                        <div class="console-title">test-lab.js</div>
                    </div>
                    <div class="console-body">
                        <div class="console-line">
                            <span class="console-prompt">$</span>
                            <span class="console-text typing-text">Loading test environment...</span>
                        </div>
                        <div class="console-line">
                            <span class="console-prompt">></span>
                            <span class="console-text">System: Ready</span>
                        </div>
                        <div class="console-line">
                            <span class="console-prompt">></span>
                            <span class="console-text">Status: <span class="text-success">Online</span></span>
                        </div>
                        <div class="console-line">
                            <span class="console-prompt">></span>
                            <span class="console-text">Awaiting new tests...</span>
                        </div>
                        <div class="console-line console-cursor">
                            <span class="console-prompt">$</span>
                            <span class="cursor-blink">_</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Test Grid Placeholder -->
<section class="test-grid py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-light mb-3">Recent Tests</h2>
                <p class="text-light">Check back soon for new experiments</p>
            </div>
        </div>
        <div class="row g-4">
            <% for(let i=1; i <=6; i++) { %>
                <div class="col-md-6 col-lg-4">
                    <div class="test-card">
                        <div class="test-card-header">
                            <span class="test-number">#<%= String(i).padStart(3, '0' ) %></span>
                            <span class="test-status">
                                <i class="bi bi-hourglass-split text-warning"></i>
                            </span>
                        </div>
                        <div class="test-card-body">
                            <h4 class="text-light mb-3">Test Slot <%= i %>
                            </h4>
                            <p class="test-description">Placeholder for upcoming test</p>
                            <div class="test-meta">
                                <span class="test-tag">Pending</span>
                            </div>
                        </div>
                        <div class="test-card-footer">
                            <button class="btn btn-sm btn-outline-primary" disabled>Coming Soon</button>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
</section>

