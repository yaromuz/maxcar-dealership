<!-- Cars Grid -->
<section class="cars-section py-5">
    <div class="container">
        <% if (cars && cars.length> 0) { %>
            <div class="row">
                <% cars.forEach(car=> { %>
                    <div class="col-lg-6 col-md-6 mb-4">
                        <div class="card bg-dark border-secondary h-100 featured-car-card">
                            <img src="<%= car.imageAddress || '/uploads/default-car.jpg' %>"
                                class="card-img-top car-card-img-large"
                                alt="<%= car.year %> <%= car.make %> <%= car.model %>">
                            <div class="card-body d-flex flex-column p-4">
                                <h3 class="card-title text-light mb-3">
                                    <%= car.year %>
                                        <%= car.make %>
                                            <%= car.model %>
                                </h3>
                                <p class="card-text fs-5 mb-4">
                                    <%= car.description || 'Quality vehicle in excellent condition.' %>
                                </p>
                                <div class="car-specs mb-4">
                                    <% if (car.horsepower) { %>
                                        <span class="badge bg-info fs-6 me-2">
                                            <%= car.horsepower %> HP
                                        </span>
                                        <% } %>
                                            <span class="badge bg-info fs-6 me-2">
                                                <%= car.transmission %>
                                            </span>
                                            <span class="badge bg-info fs-6">
                                                <%= car.mileage.toLocaleString() %> miles
                                            </span>
                                </div>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="price text-success fw-bold display-6">$<%=
                                                car.price.toLocaleString() %></span>
                                        <a href="/car-detail/<%= car._id %>" class="btn btn-primary btn-lg px-4">View
                                            Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
            <% } else { %>
                <div class="row">
                    <div class="col-12 text-center py-5">
                        <h3 class="text-light mb-3">No Cars Available</h3>
                        <p class="text-muted">Check back soon for new arrivals!</p>
                        <a href="/add-car" class="btn btn-primary">Add the First Car</a>
                    </div>
                </div>
                <% } %>
    </div>
</section>
<a class="nav-link btn btn-primary text-white ms-2 px-3 mb-2" href="/add-car">
    <i class="fas fa-plus me-1"></i>Add Car
</a>

<!-- CTA Section -->
<section class="cta-section py-5 bg-gradient">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h2 class="text-white mb-3">Can't Find What You're Looking For?</h2>
                <p class="text-white mb-4">Contact us and we'll help you find the perfect vehicle.</p>
                <a href="/contact" class="btn btn-outline-light btn-lg me-3">Contact Us</a>
                <a href="/sell" class="btn btn-light btn-lg">Sell Your Car</a>
            </div>
        </div>
    </div>
</section>