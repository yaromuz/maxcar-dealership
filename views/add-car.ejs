<!-- Add Car Form Section -->
<section class="add-car-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="add-car-card p-5">
                    <h1 class="text-center mb-5 text-primary">Add New Car to Inventory</h1>

                    <form id="addCarForm">
                        <!-- Basic Information -->
                        <div class="form-section mb-5">
                            <h3 class="section-title mb-4">
                                <i class="fas fa-info-circle me-2"></i>
                                Basic Information
                            </h3>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label for="make" class="form-label">Make *</label>
                                    <input type="text" class="form-control" id="make" name="make" required>
                                </div>
                                <div class="col-md-4">
                                    <label for="model" class="form-label">Model *</label>
                                    <input type="text" class="form-control" id="model" name="model" required>
                                </div>
                                <div class="col-md-4">
                                    <label for="year" class="form-label">Year *</label>
                                    <input type="number" class="form-control" id="year" name="year" min="1990"
                                        max="2025" required>
                                </div>
                            </div>
                        </div>

                        <!-- Engine & Performance -->
                        <div class="form-section mb-5">
                            <h3 class="section-title mb-4">
                                <i class="fas fa-cog me-2"></i>
                                Engine & Performance
                            </h3>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="engine" class="form-label">Engine</label>
                                    <input type="text" class="form-control" id="engine" name="engine"
                                        placeholder="e.g., 3.5L V6">
                                </div>
                                <div class="col-md-6">
                                    <label for="horsepower" class="form-label">Horsepower</label>
                                    <input type="number" class="form-control" id="horsepower" name="horsepower"
                                        placeholder="e.g., 300">
                                </div>
                                <div class="col-md-6">
                                    <label for="transmission" class="form-label">Transmission *</label>
                                    <select class="form-select" id="transmission" name="transmission" required>
                                        <option value="">Select Transmission</option>
                                        <option value="Manual">Manual</option>
                                        <option value="Automatic">Automatic</option>
                                        <option value="CVT">CVT</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="drivetrain" class="form-label">Drivetrain</label>
                                    <select class="form-select" id="drivetrain" name="drivetrain">
                                        <option value="">Select Drivetrain</option>
                                        <option value="FWD">Front-Wheel Drive (FWD)</option>
                                        <option value="RWD">Rear-Wheel Drive (RWD)</option>
                                        <option value="AWD">All-Wheel Drive (AWD)</option>
                                        <option value="4WD">Four-Wheel Drive (4WD)</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Fuel & Efficiency -->
                        <div class="form-section mb-5">
                            <h3 class="section-title mb-4">
                                <i class="fas fa-gas-pump me-2"></i>
                                Fuel & Efficiency
                            </h3>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="fuelType" class="form-label">Fuel Type *</label>
                                    <select class="form-select" id="fuelType" name="fuelType" required>
                                        <option value="">Select Fuel Type</option>
                                        <option value="Gasoline">Gasoline</option>
                                        <option value="Diesel">Diesel</option>
                                        <option value="Electric">Electric</option>
                                        <option value="Hybrid">Hybrid</option>
                                        <option value="Plug-in Hybrid">Plug-in Hybrid</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="mpg" class="form-label">MPG (Combined)</label>
                                    <input type="number" class="form-control" id="mpg" name="mpg"
                                        placeholder="e.g., 28">
                                </div>
                            </div>
                        </div>

                        <!-- Condition & Appearance -->
                        <div class="form-section mb-5">
                            <h3 class="section-title mb-4">
                                <i class="fas fa-palette me-2"></i>
                                Condition & Appearance
                            </h3>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label for="mileage" class="form-label">Mileage *</label>
                                    <input type="number" class="form-control" id="mileage" name="mileage" required>
                                </div>
                                <div class="col-md-4">
                                    <label for="exteriorColor" class="form-label">Exterior Color</label>
                                    <input type="text" class="form-control" id="exteriorColor" name="exteriorColor"
                                        placeholder="e.g., Midnight Blue">
                                </div>
                                <div class="col-md-4">
                                    <label for="interiorColor" class="form-label">Interior Color</label>
                                    <input type="text" class="form-control" id="interiorColor" name="interiorColor"
                                        placeholder="e.g., Black Leather">
                                </div>
                            </div>
                        </div>

                        <!-- Description & Features -->
                        <div class="form-section mb-5">
                            <h3 class="section-title mb-4">
                                <i class="fas fa-star me-2"></i>
                                Description & Key Features
                            </h3>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="description" class="form-label">Description</label>
                                    <textarea class="form-control" id="description" name="description" rows="4"
                                        placeholder="Describe the vehicle's condition, history, and notable features..."></textarea>
                                </div>
                                <div class="col-12">
                                    <label for="keyFeatures" class="form-label">Key Features</label>
                                    <input type="text" class="form-control" id="keyFeatures" name="keyFeatures"
                                        placeholder="e.g., Leather Seats, Sunroof, Navigation, Bluetooth (comma-separated)">
                                </div>
                            </div>
                        </div>

                        <!-- Image Address -->
                        <div class="form-section mb-5">
                            <h3 class="section-title mb-4">
                                <i class="fas fa-image me-2"></i>
                                Vehicle Image
                            </h3>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="imageAddress" class="form-label">Image URL Address</label>
                                    <input type="url" class="form-control" id="imageAddress" name="imageAddress"
                                        placeholder="https://example.com/car-image.jpg">
                                    <div class="form-text">Enter the full URL address of the vehicle image.</div>
                                </div>
                            </div>
                        </div>

                        <!-- Pricing -->
                        <div class="form-section mb-5">
                            <h3 class="section-title mb-4">
                                <i class="fas fa-dollar-sign me-2"></i>
                                Pricing
                            </h3>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="price" class="form-label">Price (USD) *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" class="form-control" id="price" name="price" required>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5 py-3">
                                <i class="fas fa-plus me-2"></i>Add Car to Inventory
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/scripts') %>
    <script src="/js/add-car.js"></script>