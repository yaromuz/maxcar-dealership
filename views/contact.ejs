<!-- Contact Section -->
<section class="contact-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="contact-card p-5">
                    <h1 class="text-center mb-5 text-primary">Contact MaxCar</h1>

                    <div class="row">
                        <div class="col-lg-6 mb-5">
                            <h3 class="text-light mb-4">Get in Touch</h3>
                            <div class="contact-info">
                                <div class="contact-item mb-4">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-map-marker-alt fa-2x text-primary me-3"></i>
                                        <div>
                                            <h5 class="text-light mb-1">Address</h5>
                                            <p class="text-muted mb-0">123 Car Street, Auto City, AC 12345</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="contact-item mb-4">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-phone fa-2x text-primary me-3"></i>
                                        <div>
                                            <h5 class="text-light mb-1">Phone</h5>
                                            <p class="text-muted mb-0">(555) 123-4567</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="contact-item mb-4">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-envelope fa-2x text-primary me-3"></i>
                                        <div>
                                            <h5 class="text-light mb-1">Email</h5>
                                            <p class="text-muted mb-0">info@maxcar.com</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="contact-item mb-4">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-clock fa-2x text-primary me-3"></i>
                                        <div>
                                            <h5 class="text-light mb-1">Hours</h5>
                                            <p class="text-muted mb-0">Mon-Fri: 9AM-7PM<br>Sat-Sun: 10AM-6PM</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <h3 class="text-light mb-4">Send Message</h3>
                            <form>
                                <div class="mb-3">
                                    <label for="name" class="form-label">Full Name</label>
                                    <input type="text" class="form-control" id="name" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" id="phone">
                                </div>
                                <div class="mb-3">
                                    <label for="subject" class="form-label">Subject</label>
                                    <select class="form-select" id="subject">
                                        <option value="">Select Subject</option>
                                        <option value="buying">Buying a Car</option>
                                        <option value="selling">Selling a Car</option>
                                        <option value="financing">Financing Options</option>
                                        <option value="service">Service Question</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                <div class="mb-4">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" rows="5" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-paper-plane me-2"></i>Send Message
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

