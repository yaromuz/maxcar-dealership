<!-- Hero Section with Animated Background -->
<section class="hero-section-animated">
    <div class="hero-background">
        <!-- Car driving animation background -->
        <div class="animated-bg"></div>
        <div class="hero-overlay"></div>
    </div>
    <div class="container">
        <div class="row align-items-center justify-content-center min-vh-75">
            <div class="col-lg-8 text-center hero-content">
                <h1 class="display-3 fw-bold text-white mb-4 hero-title">Find Your Perfect Car</h1>
                <p class="lead fs-4 mb-5 text-white hero-subtitle">Browse our extensive collection of premium
                    vehicles. From luxury sedans to sports cars, we have the perfect match for you.</p>
                <div class="d-flex gap-4 justify-content-center flex-wrap hero-buttons">
                    <a href="/buy" class="btn btn-primary btn-lg px-5 py-3 fs-5">Browse Cars</a>
                    <a href="/sell" class="btn btn-outline-light btn-lg px-5 py-3 fs-5">Sell Your Car</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 bg-darker">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-light mb-3">Why Choose MaxCar?</h2>
                <p>Your trusted partner in automotive excellence</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-car fa-3x text-primary"></i>
                    </div>
                    <h4 class="text-light">Quality Cars</h4>
                    <p>Every vehicle in our inventory undergoes rigorous quality checks to ensure you get the best.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-dollar-sign fa-3x text-primary"></i>
                    </div>
                    <h4 class="text-light">Best Prices</h4>
                    <p>Competitive pricing and transparent deals. No hidden fees, just honest and affordable pricing.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-clock fa-3x text-primary"></i>
                    </div>
                    <h4 class="text-light">Fast Service</h4>
                    <p>Quick and efficient service to get you behind the wheel of your new car faster.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Cars Section -->
<% if (cars && cars.length> 0) { %>
    <section class="featured-cars py-5">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="text-light mb-3">Featured Cars</h2>
                    <p>Check out some of our newest arrivals</p>
                </div>
            </div>
            <div class="row">
                <% cars.slice(0, 3).forEach(car=> { %>
                    <div class="col-md-4 mb-4">
                        <div class="car-card">
                            <img src="<%= car.imageAddress || '/uploads/default-car.jpg' %>"
                                alt="<%= car.year %> <%= car.make %> <%= car.model %>" class="car-image">
                            <div class="car-info">
                                <h5 class="car-title">
                                    <%= car.year %>
                                        <%= car.make %>
                                            <%= car.model %>
                                </h5>
                                <p class="car-price">$<%= car.price.toLocaleString() %>
                                </p>
                                <div class="car-specs">
                                    <span>
                                        <%= car.mileage.toLocaleString() %> miles
                                    </span>
                                    <span>
                                        <%= car.fuelType %>
                                    </span>
                                    <span>
                                        <%= car.transmission %>
                                    </span>
                                </div>
                                <a href="/car-detail/<%= car._id %>" class="btn btn-primary mt-3">View Details</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
            <div class="text-center mt-4">
                <a href="/buy" class="btn btn-outline-primary btn-lg">View All Cars</a>
            </div>
        </div>
    </section>
    <% } %>

        <!-- CTA Section -->
        <section class="cta-section py-5">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-lg-8">
                        <h2 class="text-light mb-3">Ready to Find Your Next Car?</h2>
                        <p class="mb-4">Join thousands of satisfied customers who found their perfect vehicle with
                            MaxCar.</p>
                        <a href="/buy" class="btn btn-primary btn-lg">Start Shopping Now</a>
                    </div>
                </div>
            </div>
        </section>